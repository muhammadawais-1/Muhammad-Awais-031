@page "/CreateAgent"
@using WebApplication6.Models
@layout Layout2
<link rel="stylesheet" href="/css/new.css" />

<h4>Agent</h4>
<hr />
<div class="main-w3layouts-agileinfo1">
    <div class="wthree-form">
        <form method="post" @onsubmit="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="shortName" class="control-label">Short Name</label>
                <input id="shortName" @bind="@Model.shortName" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="longName" class="control-label">Long Name</label>
                <input id="longName" @bind="@Model.longName" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="disc" class="control-label">Disc</label>
                <input id="disc" @bind="@Model.disc" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div>
        <NavLink href="/Agent">Back to List</NavLink>
    </div>
</div>
